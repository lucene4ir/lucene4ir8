<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<tokenFilters>
    <tokenizer>standard</tokenizer>
    <tokenFilter>
        <name>stop</name>
    </tokenFilter>
    <tokenFilter>
        <name>lowercase</name>
    </tokenFilter>
    <tokenFilter>
        <name>porterstem</name>
    </tokenFilter>
    <tokenFilter>
        <name>shingle</name>
        <param>
            <key>minShingleSize</key>
            <value>2</value>
        </param>
        <param>
            <key>maxShingleSize</key>
            <value>2</value>
        </param>

        <param>
            <key>fillerToken</key>
            <value>___</value>
        </param>
        <param>
            <key>outputUnigrams</key>
            <value>True</value>
        </param>
    </tokenFilter>
</tokenFilters>
