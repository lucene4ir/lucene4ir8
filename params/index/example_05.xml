<tokenFilters>
    <tokenizer>standard</tokenizer>
    <tokenFilter>
        <name>lowercase</name>
    </tokenFilter>
    <tokenFilter>
        <name>stop</name>
        <param>
            <key>words</key>
            <value>data/stopwords.txt</value>
        </param>
        <param>
            <key>format</key>
            <value>wordset</value>
        </param>
    </tokenFilter>
    <tokenFilter>
        <name>patternreplace</name>
        <param>
            <key>pattern</key>
            <value>([+\-._()",/%]?[0-9]+[+\-._()",/%]?[0-9]*[+\-._()",/%]?|^_+)</value>
        </param>
        <param>
            <key>replacement</key>
            <value></value>
        </param>
        <param>
            <key>replace</key>
            <value>all</value>
        </param>
    </tokenFilter>
    <tokenFilter>
        <name>porterstem</name>
    </tokenFilter>
    <tokenFilter>
        <name>length</name>
        <param>
            <key>min</key>
            <value>3</value>
        </param>
        <param>
            <key>max</key>
            <value>999</value>
        </param>
    </tokenFilter>
</tokenFilters>